	<div class="row">
	  <div class="col-md-9"></div>
	  <div class="col-md-3" style="padding-top:10px;padding-bottom:10px;">
	  <%=@user.name%> | <a href = "users/signout">Sign Out</a>
	  </div>
	</div>


<div style="padding:25px;background-color:#11C257;">

	<div class="row">
	  <div class="col-md-9"><h5 style="color:#FFFFFF;">Your User API Key: <%=@user.api_key%></h5></div>
	  <div class="col-md-3"><a href = "/applications/new"><button type="button" class="btn btn-default">New Application</button></a></div>
	</div>


	<div style="padding:25px;">
	<h4>You have no applications. <a href = "/applications/new">Create your first application.</a></h4>
	</div>

<%else%>

	<table class="table table-striped">

	<tr>
	    <th>Application Name</th>
	    <th>Application API ID</th>
	    <th>Classes</th>
	    <th>Items</th>
	  </tr>

	  <%@applications.each do |app|%>
		  <tr>
		    <td><%=app.name%></td>
		    <td><%=app.id%></td>
		    <td><%=app.class_count%></td>
		    <td><%=app.items.count%></td>
		  </tr>
	  <%end%>

	</table>

<%end%>

